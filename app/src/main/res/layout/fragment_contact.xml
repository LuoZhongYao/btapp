<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

        <LinearLayout
                android:id="@+id/rl_downloading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


            <ImageView
                    android:id="@+id/image_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_donwloading"/>

            <ImageView
                    android:id="@+id/flag_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_match_bg"/>

            <TextView
                    android:id="@+id/tv_contacts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="23sp"/>
        </LinearLayout>

        <ListView
                android:id="@+id/lv_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null"
                android:scrollbars="@null"
                android:visibility="visible">
        </ListView>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_sync"
                android:visibility="visible"
                android:text="@string/sync"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/dial_key"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:visibility="gone"
                android:background="@drawable/dial_key"
                android:text="@string/cancel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>
