<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:baselineAligned="false">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <include layout="@layout/call" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/ll_keypad">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/dial_display_broder">
            <TextView
                    android:id="@+id/tv_display"
                    android:gravity="start"
                    style="@style/DisplayEditTextStyle.Formula"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"/>

            <ImageButton
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_backspace"
                    android:src="@drawable/ic_backspace"
                    android:background="@null"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/backspace"/>


        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/dial_display_broder">
            <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TableRow>
                    <android.support.v7.widget.AppCompatButton
                            style="@style/PadButtonStyle.Numeric"
                            android:id="@+id/btn_number1"
                            android:text="1"/>
                    <android.support.v7.widget.AppCompatButton
                            style="@style/PadButtonStyle.Numeric"
                            android:id="@+id/btn_number2"
                            android:text="2"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number3"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="3"/>

                </TableRow>

                <TableRow>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number4"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="4"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number5"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="5"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number6"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="6"/>

                </TableRow>

                <TableRow>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number7"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="7"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number8"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="8"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number9"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="9"/>

                </TableRow>
                <TableRow>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number10"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="*"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number0"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="0"/>
                    <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_number11"
                            style="@style/PadButtonStyle.Numeric"
                            android:text="#"/>

                </TableRow>
            </TableLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageButton
                        android:id="@+id/btn_dial"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_call"
                        style="@style/PadButtonStyle.Numeric"
                        android:contentDescription="TODO"/>
                <ImageButton
                        android:id="@+id/btn_redial"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_recall"
                        style="@style/PadButtonStyle.Numeric"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>